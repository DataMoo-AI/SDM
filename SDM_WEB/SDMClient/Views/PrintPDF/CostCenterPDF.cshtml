table td,table th{
border:none !important;
border-top:0px !important; 
}
</style>
 </head>
 <body>

     <div>
         <div class="p-3 mb-3">
              <!-- title row -->
                   <div class="row">
                <div class="col-12">
                  <h4>
                   @* <i class="fas fa-globe"></i> @_response.CustomerMasterResponse[0].CustName*@
                    <small class="float-right">Date: @DateTime.Now</small>
                  </h4>
                </div>
                <!-- /.col -->
              </div>
              <!-- info row -->
              <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                   
                  <address>
         <strong>@_Headingresponse.CustomerMasterResponse[0].CustName.</strong><br> 
                  </address>
                </div> 
              </div>
              <!-- /.row -->
 

              <div class="row">
           
                <div class="col-12">
                       <div class="row col-md-12">
                  <h3 class="text-center">Cost Center</h3>
</div>
                  <div class="table-responsive">
                    <table border="0" class="table"width="100%">
                      <tbody>
                          <tr>
                        <th style="width:25%">Cost Code:</th>
                        <td>@_response.CostCenterResponse[0].CsCode</td>
                        
                        <th style="width:25%">Name:</th>
                        <td>@_response.CostCenterResponse[0].CsName</td>
                      </tr>
                           <tr>
                        <th style="width:25%">Location:</th>
                        <td>@_response.CostCenterResponse[0].CsLocation</td>
                        
                        <th style="width:25%">Country:</th>
                        <td>@_response.CostCenterResponse[0].CsCountry</td>
                      </tr>
                    </tbody></table>
                  </div>
                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->

              <!-- this row will not appear when printing -->
            
              </div>
            </div>

          

     </div>



