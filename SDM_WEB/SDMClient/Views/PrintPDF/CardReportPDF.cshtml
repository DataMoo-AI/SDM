 <body>

     <div>
         <div class="p-3 mb-3">
              <!-- title row -->
              <div class="row">
                <div class="col-12">
                  <h4>
                   @* <i class="fas fa-globe"></i> @_response.CustomerMasterResponse[0].CustName*@
                    <small class="float-right">Date: @DateTime.Now</small>
                  </h4>
                </div>
                <!-- /.col -->
              </div>
              <!-- info row -->
              <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
        
                  <address>
                    <strong>@_response.CustomerMasterResponse[0].CustAddress,.</strong><br> 
                    Phone: @_response.CustomerMasterResponse[0].CustContactMobile<br>
                    Email: @_response.CustomerMasterResponse[0].CustEmail
                  </address>
                </div> 
              </div>
              <!-- /.row -->
 

              <div class="row">
           
                <div class="col-12">
                       <div class="row col-md-12">
                  <h3 class="text-center">Card Report</h3>
</div>
  
             <table class="table" style="margin-left:20% !important;margin-right:20% !important;width:60% !important">
        <tr>
            <th width="5%">Name</th>
            <td width="25%">AXIS</td>
            <th width="5%">A/C No</th>
            <td width="25%">AX0032</td>
        </tr> 
        <tr>
            <th width="5%">Card No</th>
            <td width="25%">524323423</td>
            <th width="5%">IBAN</th>
            <td width="25%">23232</td>
        </tr>
        </table> 
   
       
                        <div class="table-responsive">

                    <table class="table" width="100%">
                         @foreach (var i in @_response.ReportTemp)
                        { 
                         @if(CheckMonth!= Convert.ToString(@i["trnMonthFormat"])&&CheckMonth!="")
                                {
                                            <tr class="">
                                <td colspan="8"></td>
                                    <td class="text-right">@string.Format("{0:n}",Convert.ToDouble(@TotalAmount))</td>
                                          </tr>
                                }
                         @if(CheckMonth!= Convert.ToString(@i["trnMonthFormat"]))
                        {
                            

                            <tr class="blank_row">
                                <td colspan="8"></td>
                                          </tr>
                                 
                                        <tr>
                                            <th class="text-center">Date</th>
                                            <th class="text-center">SubAccount</th>
                                            <th class="text-center">Category Name</th>
                                            <th class="text-center">Inv.No</th>
                                            <th class="text-center">Supplier Name</th>
                                            <th class="text-center">Details</th>
                                            <th class="text-center">RequestBy</th>
                                            <th class="text-center">Amount</th>
                                            <th class="text-center">Total</th>
                                        </tr>
                                  
                                   
                                }
                               
                               
                
                         
                       <tr>
                            <td class="text-center">@i["trnDateFormat"]</td>
                            <td>@i["trnCommonSubAccount"]</td>
                            <td>@i["trnCategoryName"]</td>
                            <td>@i["trnInvNo"]</td>
                            <td>@i["trnSupplierName"]</td>
                            <td>@i["trnDetails"]</td>
                            <td>@i["trnRequestBy"]</td>
                            <td class="text-right">@string.Format("{0:n}",Convert.ToDouble(@i["trnAmount"]))</td>
                            <td></td>

                                </tr>

                                {
                                    TotalAmount = Convert.ToString(Convert.ToDouble(TotalAmount)+Convert.ToDouble(@i["trnAmount"]=="" ?"0":@i["trnAmount"]));
                                    CheckMonth = Convert.ToString(@i["trnMonthFormat"]);
                                    j++;
                                }  
                       @if(@j==@_response.ReportTemp.Count)
                                {
                                            <tr class="">
                                <td colspan="8"></td>
                                    <td class="text-right">@string.Format("{0:n}",Convert.ToDouble(@TotalAmount))</td>
                                          </tr>
                                }
             
                }
                   </table>
                  </div> 
                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->

              <!-- this row will not appear when printing -->
            
