@using Newtonsoft.Json;
@using SDM.Common.Response;
@{
    var _response = JsonConvert.DeserializeObject<Response>(Context.Session.GetString("_response"));
    var Bew = "";
      var _Headingresponse = JsonConvert.DeserializeObject<Response>(Context.Session.GetString("_Headingresponse"));

}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>SDM Office</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome --> 
  <link rel="stylesheet" href="~/theme/plugins/fontawesome-free/css/all.min.css">
  <!-- DataTables -->
  <link rel="stylesheet" href="~/theme/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
  <link rel="stylesheet" href="~/theme/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
  <link rel="stylesheet" href="~/theme/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
  <!-- Theme style -->
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
      <link rel="stylesheet" href="~/theme/dist/css/adminlte.min.css"> 
      <!-- Select2 -->
  <link rel="stylesheet" href="~/theme/plugins/select2/css/select2.min.css">
  <link rel="stylesheet" href="~/theme/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
      <style>
table td,table th{
border:none !important;
border-top:0px !important;
}
</style>
 </head>
 <body>

     <div>
         <div class="p-3 mb-3">
                <!-- title row -->
              <div class="row">
                <div class="col-12">
                  <h4>
                   @* <i class="fas fa-globe"></i> @_response.CustomerMasterResponse[0].CustName*@
                    <small class="float-right">Date: @DateTime.Now</small>
                  </h4>
                </div>
                <!-- /.col -->
              </div>
              <!-- info row -->
              <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                   
                  <address>
                    <strong>@_Headingresponse.CustomerMasterResponse[0].CustAddress,.</strong><br> 
                    Phone: @_Headingresponse.CustomerMasterResponse[0].CustContactMobile<br>
                    Email: @_Headingresponse.CustomerMasterResponse[0].CustEmail
                  </address>
                </div> 
              </div>
              <!-- /.row -->
 

              <div class="row">
           
                <div class="col-12">
                       <div class="row col-md-12">
                  <h3 class="text-center">Transaction</h3>
</div>

                  <div class="table-responsive">
                    <table class="table"width="100%">
                      <tbody>
                          <tr>
                        <th style="width:25%">Cost Center:</th>
                        <td>@_response.TransactionEntries[0].TrnCostCentreName</td>
                        
                        <th style="width:25%">Date:</th>
                        <td>@_response.TransactionEntries[0].TrnDate</td>
                      </tr>
                           <tr>
                        <th style="width:25%">Credit/Debit :</th>
                         @if (@_response.TransactionEntries[0].TrnCreditDebit == 1)
                                    {
                                         <td>Credit</td>
                                    }
                                     @if (@_response.TransactionEntries[0].TrnCreditDebit == 2)
                                    {
                                        <td>Debit</td>
                                    }
                                  
                   
                        
                        <th style="width:25%">Category :</th>
                        <td>@_response.TransactionEntries[0].TrnCategoryName</td>
                      </tr>
                      <tr>
                       <th style="width:25%">Account :</th>
                        <td>@_response.TransactionEntries[0].TrnSubAccountName</td>

                       <th style="width:25%">Account Number:</th>
                        <td>@_response.TransactionEntries[0].TrnAccountnumber</td>

                      </tr> 
                      <tr>
                      <th style="width:25%">Details :</th>
                        <td>@_response.TransactionEntries[0].TrnDetails</td>

                         <th style="width:25%">Invoice Number:</th>
                        <td>@_response.TransactionEntries[0].TrnInvNo</td>
                      </tr>

                         <tr>
                      <th style="width:25%">Supplier :</th>
                        <td>@_response.TransactionEntries[0].TrnSupplierName</td>

                         <th style="width:25%">Currency :</th>
                          @if (@_response.TransactionEntries[0].TrnCurrency == 1)
                                    {
                                         <td>AED</td>
                                    }
                                     @if (@_response.TransactionEntries[0].TrnCurrency == 2)
                                    {
                                        <td>USA</td>
                                    }
                                    else
                                    {
                                         <td></td>
                                    }
                         
                      </tr>

                      <tr>
                      <th style="width:25%">Amount :</th>
                        <td>@_response.TransactionEntries[0].TrnAmount</td>

                         <th style="width:25%">Instrument Type :</th>
                        <td>@_response.TransactionEntries[0].TrnInstrumentType</td>
                          @if (@_response.TransactionEntries[0].TrnInstrumentType == 1)
                                    {
                                         <td>Cheque</td>
                                    }
                                     @if (@_response.TransactionEntries[0].TrnInstrumentType == 2)
                                    {
                                        <td>Cash</td>
                                    } 
                                    @if (@_response.TransactionEntries[0].TrnInstrumentType == 3)
                                    {
                                        <td>Telex Trans</td>
                                    }
                                     @if (@_response.TransactionEntries[0].TrnInstrumentType == 4)
                                    {
                                        <td>Swift</td>
                                    }
                                     @if (@_response.TransactionEntries[0].TrnInstrumentType == 5)
                                    {
                                        <td>Credit card</td>
                                    }
                                    else
                                    {
                                         <td></td>
                                    }
                      </tr>

                       <tr>
                      <th style="width:25%">Instrument Number :</th>
                        <td>@_response.TransactionEntries[0].TrnInstrumentNumb</td>

                         <th style="width:25%">Bank Account Number :</th>
                        <td>@_response.TransactionEntries[0].TrnBankAccountName</td>
                      </tr>
                       
                        <tr>
                      <th style="width:25%">Remarks :</th>
                        <td>@_response.TransactionEntries[0].TrnRemarks</td>

                         <th style="width:25%">Trn.Request By :</th>
                        <td>@_response.TransactionEntries[0].TrnRequestBy</td>
                      </tr>
                      </tbody></table>
                  </div>
                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->

              <!-- this row will not appear when printing -->
            
              </div>
            </div>

            <div class="text-center">
                Thank you
                  </div>

     </div>



