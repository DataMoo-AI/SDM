    async function BindGrid() 
    {
        var url = '@Url.Action("BindGrid", "Cost_Center_Master")';
        var data = {"csId":0};
        data = await callController(url, data);
        $('h2.h3.mb-0.text-center').text('Cost Center Master - Add');
        console.log(data);
        Gridappend(data.costCenterResponse);
    }
    async function _View(csId)
    {
        debugger;
         GridShow(2);

         $('h2.h3.mb-0.text-center').text('Cost Center Master - View');
        var url = '@Url.Action("BindGrid", "Cost_Center_Master")';
        var data = {"csId":csId};
        $('#_btnSubmit').hide();
        $('#print').attr("_PrintID",csId);
        data = await callController(url, data);
        $('#txtCostCenterCode').val(data['costCenterResponse'][0].csCode);
        $('#txtCostCenterName').val(data['costCenterResponse'][0].csName);
        $('#txtCostCenterLocation').val(data['costCenterResponse'][0].csLocation);
        $('#txtCostCenterCountry').val(data['costCenterResponse'][0].csCountry);
        $("#txtCostCenterCode").prop('disabled', true);
        $("#txtCostCenterName").prop('disabled', true);
        $("#txtCostCenterLocation").prop('disabled', true);
        $("#txtCostCenterCountry").prop('disabled', true);
    }
    function GridShow(Flag){
        if(Flag==1){
            $('.Gridtable').show();
            $('.GridView').hide();

        }
        else{
            $('.Gridtable').hide();
            $('.GridView').show();
        }
    }
    var cCId = 0;
    var type ='';
    async function _Edit(csId){
        debugger;
          var url = '@Url.Action("BindGrid", "Cost_Center_Master")';
        var data = {"csId":csId};
        data = await callController(url, data);

        $('h2.h3.mb-0.text-center').text('Cost Center Master - Edit');
        GridShow(2);
        type = 'update';
        cCId = data['costCenterResponse'][0].csId;
        $('#txtCostCenterCode').val(data['costCenterResponse'][0].csCode);
        $('#txtCostCenterName').val(data['costCenterResponse'][0].csName);
        $('#txtCostCenterLocation').val(data['costCenterResponse'][0].csLocation);
        $('#txtCostCenterCountry').val(data['costCenterResponse'][0].csCountry);
        
        $("#txtCostCenterCode").prop('disabled', false);
        $("#txtCostCenterName").prop('disabled', false);
        $("#txtCostCenterLocation").prop('disabled', false);
        $("#txtCostCenterCountry").prop('disabled', false);
    }
    async function _Delete(csId){
        var url = '@Url.Action("BindGrid", "Cost_Center_Master")';
        var data = {"csId":csId};
        data = await callController(url, data);
        GridShow(2);
        type = 'delete';
        cCId = data['costCenterResponse'][0].csId;
        $('h2.h3.mb-0.text-center').text('Cost Center Master - Delete');
        $('#txtCostCenterCode').val(data['costCenterResponse'][0].csCode);
        $('#txtCostCenterName').val(data['costCenterResponse'][0].csName);
        $('#txtCostCenterLocation').val(data['costCenterResponse'][0].csLocation);
        $('#txtCostCenterCountry').val(data['costCenterResponse'][0].csCountry);
        $("#txtCostCenterCode").prop('disabled', true);
        $("#txtCostCenterName").prop('disabled', true);
        $("#txtCostCenterLocation").prop('disabled', true);
        $("#txtCostCenterCountry").prop('disabled', true);
    }
        function printPage(obj) {
    var url = '@Url.Action("CostCenterPDF", "PrintPDF")'; 
    var _id = $(obj).attr("_PrintID");
    window.open(url + "?ID=" + _id);
}
    function Gridappend(data) {
        debugger;
        var item = '';
        var Arr;
        if (data!=undefined)
        {
        if (data.length > 0) {
            Arr = data;
            for (var i = 0; i < Arr.length; i++)
            {
                var sno=i+1;
                item += '<tr>';
                item += '<td>' + sno+ '</td>';
                item += '<td>' + Arr[i].csCode + '</td>';
                item += '<td>' + Arr[i].csName + '</td>';
                item += '<td>' + Arr[i].csLocation + '</td>';
                item += '<td>' + Arr[i].csCountry + '</td>';

                item += '  <td>';
                item += ActionsButtons(Arr[i].csId)
                item += '</td>';
                item += ' </tr>';
            }
            $('#bodyData').html('').append(item);
        } else {
            $('#bodyData').html('').append('<tr><td colspan="10" style="text-align:center">No records found.</td></tr>');
        }
        }
        else {
            $('#bodyData').html('').append('<tr><td colspan="10" style="text-align:center">No records found.</td></tr>');
        }
    }
    async function IUDEmpDetails(){
        debugger;
        var CostCenterCode=$('#txtCostCenterCode').val();
        var CostCenterName=$('#txtCostCenterName').val();
        var CostCenterLocation=$('#txtCostCenterLocation').val();
        var CostCenterCountry=$('#txtCostCenterCountry').val();
        if(CostCenterCode == ""){
            toastr.warning("Please enter the cost center code.");
            return false;
        }
        if(CostCenterName == "")
        {
            toastr.warning("Please enter the cost center name.");
             return false;
        }
        var data =
        {
            "CsId":cCId,
            "CsCode":CostCenterCode,
            "CsName":CostCenterName,
            "CsLocation":CostCenterLocation,
            "CsCountry":CostCenterCountry
        };
        if(cCId == 0)
        {
            var url = '@Url.Action("Add", "Cost_Center_Master")';
            data = await callController(url, data);
            toastr.success('Cost center master added.');
        }
        else
        {
            if(type == 'update'){
                var url = '@Url.Action("Update", "Cost_Center_Master")';
                data = await callController(url, data);
                toastr.success('Cost center master updated.');
            }
            else{
                var url = '@Url.Action("Delete", "Cost_Center_Master")';
                data = await callController(url, data);
                toastr.success('Cost center master deleted.');
            }
        }
        console.log(data);
        setTimeout(function() {location.reload();}, 3000);
    }
    
  
    function clearAll(){
          GridShow(1);
           $('input[type=text]').val('');           
        $('h2.h3.mb-0.text-center').text('Add - Cost Center Master');
    }

</script>